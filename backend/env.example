# Configurações da Aplicação
APP_NAME=Plataforma Educacional P1A
APP_VERSION=1.0.0
DEBUG=True

# Banco de Dados PostgreSQL / Supabase
# Para PostgreSQL local:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/p1a_db
# Para Supabase (recomendado):
# Obtenha a Connection String em: https://app.supabase.com/project/[seu-project]/settings/database
# Formato: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# JWT / Autenticação
# IMPORTANTE: Gere uma chave secreta forte (mínimo 32 caracteres)
# Você pode gerar uma com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=lZnbqL-oNPZohl6W982SBqOECeaaAfRbpvyJDsnTx_w
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Anthropic Claude API
# Obtenha sua chave em: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# Opções de modelo:
# - claude-3-5-sonnet-20241022 (recomendado, melhor custo-benefício)
# - claude-3-opus-20240229 (melhor qualidade, mais caro)
# - claude-3-haiku-20240307 (mais rápido e barato)

# RAG - Supabase (pgvector)
# Tabela para armazenar documentos RAG com embeddings
RAG_TABLE_NAME=rag_documents
EMBEDDING_DIMENSION=384

# Sentence Transformers (para embeddings locais)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Embeddings OpenAI (opcional - apenas se quiser usar OpenAI para embeddings)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Redis (para cache e Celery - opcional)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
# Adicione as origens permitidas separadas por vírgula
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Web Scraping
SCRAPING_DELAY_MIN=1.0
SCRAPING_DELAY_MAX=3.0
SCRAPING_USER_AGENT=Mozilla/5.0 (Educational Platform Bot)

# Firecrawl (opcional - para web scraping avançado)
# FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# Logging
LOG_LEVEL=INFO
